# Use official Node.js image as base
FROM node:20-alpine

# Set working directory
WORKDIR /app

# Copy package.json and package-lock.json (if present)
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy the rest of the frontend code
COPY . .

# Build the frontend (adjust if using a different build command)
RUN npm run build

# Expose port (change if your frontend uses a different port)
EXPOSE 3000

# Start the frontend (adjust if using a different start command)
CMD ["npm", "start"]